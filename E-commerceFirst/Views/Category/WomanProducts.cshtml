@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "ManProducts";
    Layout = "~/Views/Shared/ManProducts.cshtml";
}

<!-- inner page section -->
<section class="inner_page_head">
    <div class="container_fuild">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <h3>Qadın Məhsulları</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end inner page section -->


<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Bizim <span>Məhsullar</span>
            </h2>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {
                @if (item.Category.CategoryID == 2)
                {
                    <div class="col-sm-6 col-md-4 col-lg-4">
                        <div class="box">
                            <div class="option_container">
                                <div class="options">
                                    <a href="" class="option1">
                                        Səbətə əlavə et
                                    </a>
                                    <a href="" class="option2">
                                        İndi al
                                    </a>
                                </div>
                            </div>
                            <div class="img-box">
                                <img src="@item.ProductImage" alt="">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @item.ProductName
                                </h5>

                                <h6>
                                    @item.ProductPrice
                                </h6>
                                <div style="margin-top:25px">
                                    <h6>
                                        Kateqoriya: @item.Category.CategoryName
                                    </h6>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="btn-box">
            <a href="">
                Bütün məhsullar
            </a>
        </div>
    </div>
</section>




